@page
@model IndexModel
@{
    ViewData["Title"] = "The Time";
}

<style>
    /* CSS to make the time and div centered */
    .centered {
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    h1 {
        font-size: 5rem;
        color: #fff; /* Text color in dark mode */
    }

    body {
        background-color: #121212; /* Dark background color */
        color: #f5f5f5; /* Text color in dark mode */
    }

    a {
        color: #90caf9; /* Link color in dark mode */
    }
</style>

<header class="text-center">
    <h3>Welcome</h3>
</header>

<div class="centered">
    <h1><span id="currentTime">@DateTime.Now.ToString("hh:mm:ss tt")</span></h1>
</div>

<footer class="text-center">
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</footer>

@section scripts{
    <script>
        // Function to update the time on the page
        function updateTime() {
            var currentTime = new Date().toLocaleTimeString();
            document.getElementById("currentTime").innerText = currentTime;
        }

        // Function to refresh the page every minute
        function refreshPage() {
            location.reload();
        }

        // Call the updateTime function to display the initial time
        updateTime();

        // Refresh the page every minute (60000ms)
        setInterval(refreshPage, 600);
    </script>
}
